doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    block meta

    title
      block title
    meta(name='description', content=''+desc)
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='/assets/stylesheets/main.css')
    link(rel='stylesheet', href='//brick.a.ssl.fastly.net/Bitter:400,700,400i,700i')
  body
    .header
      .page-wrapper
        a.header-name(href='/') Steven Schobert
        .header-links(role='navigation')
          a(href='/writings', class=(request.path === '/writings') ? 'header-link active' : 'header-link') Writings
          a(href='/projects', class=(request.path === '/projects') ? 'header-link active' : 'header-link') Projects
          a(href='/about', class=(request.path === '/about') ? 'header-link active' : 'header-link') About

    block content

    .page-wrapper
      .footer
        .footer-text
          a(href='https://twitter.com/stevenschobert') @stevenschobert

    script(type='text/javascript', src='/assets/javascript/main.js')

    if Pimm.config.gaugesKey
      include ../partials/_gauges

