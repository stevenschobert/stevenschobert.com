  %head
    %title Placeholder

    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}

    %link{rel: "stylesheet", href: urlTo("css/main.css")}
  %body

    .badge-wrapper
      %a.badge{href: urlTo("/")} S

    .page-buffer
      .preface
        .preface-text
          I'm
          %b
            %a{href: urlTo("/")}= "Steven Schobert"
            &nbsp;
          &mdash; programmer, photographer, husband, father, nerd.
        .preface-links
          .preface-link
            %a{href: "#"} About
          .preface-link
            %a{href: "#"} Twitter
          .preface-link
            %a{href: "#"} GitHub
          .preface-link
            %a{href: "#"} Archive
          .preface-link
            %a{href: "#"} RSS

    .page-buffer
      - var title = title || null;
      - var date = date || null;

      - if (title || date) {
        - if (title) {
          .page-title
            %h1= title

            - if (date) {
              .page-date= printDate(date)
              %a.page-permalink{ title: "Permalink", href: urlToSelf() } &#8267;
            - }
        - }
      - }

      .page-text
        != contents

    .page-footer
      .page-buffer
        .page-footer-text
          != "&copy; 2012-" + new Date().getFullYear() + " "
          Steven Schobert

